        <VBox styleClass="vbox1" alignment="CENTER" prefWidth="372.0" spacing="10.0">
            <HBox styleClass="hbox2" alignment="CENTER" prefHeight="25.0">
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <HBox.margin><Insets right="10.0"/></HBox.margin>
                </ImageView>
                <VBox prefHeight="150.0" prefWidth="104.0">
                    <padding><Insets right="70.0"/></padding>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Alert title">
                        <font><Font size="24.0"/></font>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Alert fieldname">
                        <font><Font size="18.0"/></font>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Alert fieldname">
                        <font><Font size="18.0"/></font>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Alert fieldname">
                        <font><Font size="18.0"/></font>
                    </Text>
                </VBox>
                <VBox>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="RIGHT">
                        <font><Font size="24.0"/></font>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Alert value"

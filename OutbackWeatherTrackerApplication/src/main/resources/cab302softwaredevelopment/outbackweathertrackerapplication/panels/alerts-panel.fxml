                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Alert value"
                          textAlignment="RIGHT">
                        <font><Font size="18.0"/></font>
                    </Text>
                </VBox>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <HBox.margin><Insets left="10.0"/></HBox.margin>
                </ImageView>
                <VBox alignment="TOP_CENTER">
                    <HBox.margin><Insets top="10.0"/></HBox.margin>
                    <Button mnemonicParsing="false" text="notification"/>
                </VBox>
                <VBox alignment="TOP_CENTER">
                    <HBox.margin>
                        <Insets top="10.0"/>
                    </HBox.margin>
                    <Button mnemonicParsing="false" text="close"/>
                </VBox>
            </HBox>
        </VBox>
    </ScrollPane>
</VBox>

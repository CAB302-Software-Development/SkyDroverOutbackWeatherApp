<VBox fx:id="pnlRoot" prefHeight="400.0" prefWidth="600.0" styleClass="background-primary" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cab302softwaredevelopment.outbackweathertrackerapplication.controllers.pages.DashboardController">

    <BorderPane fx:id="bpHeader" maxHeight="60.0" prefHeight="60.0">
        <left>
            <Text fx:id="txtWelcome" strokeType="OUTSIDE" strokeWidth="0.0" BorderPane.alignment="CENTER">
                <font><Font size="18.0" /></font>
            </Text>
        </left>
        <right>
            <Button fx:id="btnEditDashboard" onAction="#handleButtonClick" styleClass="button-primary" text="Edit dashboard">
            </Button>
        </right>
        <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    </BorderPane>

    <HBox fx:id="hbEditModeToolbar" alignment="CENTER_RIGHT" managed="false" maxWidth="Infinity" spacing="10" visible="false" HBox.hgrow="ALWAYS">
        <Button fx:id="btnSave" onAction="#handleButtonClick" text="Save" />
        <Button fx:id="btnCancel" onAction="#handleButtonClick" text="Cancel" />
        <Button fx:id="btnNewLayout" onAction="#handleButtonClick" text="New layout" />
        <Button fx:id="btnDeleteLayout" onAction="#handleButtonClick" text="Delete layout" />
        <ComboBox fx:id="cboSelectedLayout" />
        <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    </HBox>

    <GridPane fx:id="dashboardGrid" alignment="CENTER" hgap="10" prefHeight="466.0" prefWidth="600.0" vgap="10" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
    </GridPane>
</VBox>

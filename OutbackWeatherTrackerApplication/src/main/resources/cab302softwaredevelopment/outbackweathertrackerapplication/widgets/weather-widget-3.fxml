<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<VBox alignment="CENTER" styleClass="background-secondary"
      stylesheets="@../themes/style.css,@../themes/theme-light.css"
      xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cab302softwaredevelopment.outbackweathertrackerapplication.controllers.widgets.WeatherWidget3Controller">
   <Text  fx:id="txtLocation" text="Location">
      <font><Font size="14.0"/></font>
   </Text>
   <ImageView fx:id="weatherIconImageView" fitHeight="80.0" fitWidth="80.0" preserveRatio="true"/>
   <Text fx:id="txtTemperature" text="CurrentTempÂ°">
      <font><Font size="36.0"/></font>
      <VBox.margin><Insets bottom="10.0"/></VBox.margin>
   </Text>
   <Text fx:id="txtPrecipitation" text="Precipitation">
      <font><Font size="18.0"/></font>
      <VBox.margin><Insets bottom="10.0"/></VBox.margin>
   </Text>
   <HBox alignment="CENTER" prefHeight="19.0" prefWidth="279.0" spacing="40.0">
      <VBox>
         <Label alignment="CENTER" text="Wind"  wrapText="true">
            <font><Font name="Comic Sans MS" size="13.0"/></font>
         </Label>
         <Text fx:id="txtWind"  strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
      </VBox>
      <VBox>
         <Label text="Humidity"  wrapText="true">
            <font><Font name="Comic Sans MS" size="13.0"/></font>
         </Label>
         <Text fx:id="txtHumidity"  strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
      </VBox>
      <VBox>
         <Label text="Feels Like"  wrapText="true">
            <font><Font name="Comic Sans MS" size="13.0"/></font>
         </Label>
         <Text fx:id="txtFeelsLike"  strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
      </VBox>
   </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="cab302softwaredevelopment.outbackweathertrackerapplication.controllers.windows.WidgetConfigDialogController">
    <content>
        <VBox spacing="10">
            <!-- Widget Type Selection -->
            <HBox spacing="10">
                <Label text="Widget Type:"/>
                <ComboBox fx:id="widgetTypeComboBox"/>
            </HBox>
            <!-- Widget Configuration Fields (dynamic) -->
            <VBox fx:id="configFieldsVBox" spacing="10"/>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType fx:id="saveButtonType" text="Save" buttonData="OK_DONE"/>
        <ButtonType fx:id="deleteButtonType" text="Delete" buttonData="OTHER"/>
        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
